<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flow_verticalAlign="center"
    tools:context=".DialogActivity">

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Sum"
        android:layout_margin="20dp"
        android:id="@+id/CalculateMBtn"
        app:layout_constraintTop_toTopOf="parent"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/simpleInterestMbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Simple Interest"
        android:textAllCaps="false"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/CalculateMBtn"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculateTriangleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/simpleInterestMbtn"
        android:text="Calculate Area of Triangle"
        android:layout_margin="20dp"
        android:textAllCaps="false"
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculateCircleArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calculateTriangleArea"
        android:layout_margin="20dp"
        android:text="Calculate Area of Circle"
        android:textAllCaps="false"
    />

</androidx.constraintlayout.widget.ConstraintLayout>